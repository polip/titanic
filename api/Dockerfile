# Generated by the vetiver package; edit with care

FROM rocker/r-ver:4.5.1
ENV RENV_CONFIG_REPOS_OVERRIDE https://packagemanager.rstudio.com/cran/latest

RUN apt-get update -qq && apt-get install -y --no-install-recommends libxml2-dev \
  libcurl4-openssl-dev \
  # Add pandoc as it is not in the base image but required by rmarkdown (a vetiver dependency)
  pandoc \
  fontconfig \
  libfreetype6-dev \
  libfribidi-dev \
  libharfbuzz-dev \
  libjpeg-dev \
  libpng-dev \
  libtiff-dev \
  libglpk-dev \
  libicu-dev \
  libsodium-dev \
  libssl-dev \
  libx11-dev \
  make \
  unzip \
  zip \
  zlib1g-dev \
  && apt-get clean && rm -rf /var/lib/apt/lists/*
  
# Create a non-root user to run the application
RUN useradd --create-home --shell /bin/bash app
WORKDIR /home/app

COPY renv.lock renv.lock
RUN Rscript -e "install.packages(c('renv', 'plumber'))"
RUN Rscript -e "renv::consent(provided = TRUE); renv::restore(clean = TRUE, lockfile = 'renv.lock')"

COPY api/plumber.R plumber.R

# Ensure the app user owns the files
RUN chown -R app:app /home/app
USER app


EXPOSE 8080

ENTRYPOINT ["R", "-e", "pr <- plumber::plumb('plumber.R'); pr$run(host='0.0.0.0', port=as.numeric(Sys.getenv('PORT',8080)))"]
